<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.devmarvin.cuestionarios">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Cuestionarios" >
        <activity android:name=".ActivityListaPreguntas">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActivityPregunta"
            android:parentActivityName=".ActivityListaPreguntas">
        </activity>
        <activity android:name=".ActivityCrearPregunta"
            android:parentActivityName=".ActivityListaPreguntas">
        </activity>
        <activity android:name=".ActivityEditarPregunta"
            android:parentActivityName=".ActivityListaPreguntas">
        </activity>
    </application>
    </manifest>